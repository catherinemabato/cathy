# Makefile for DOSEMU
#
# Always use src as the top-level

export WAIT=yes
export do_DEBUG=no

@SET_MAKE@

default install clean realclean echo help depend:
	@$(MAKE) -C src $@

all:
	@$(MAKE) -C src default

pristine:
	@$(MAKE) -C src $@
	rm -f config.cache config.status config.log src/include/config.h
	rm -f src/Makefile.common src/arch/linux/Makefile.main
	rm -f `find src -name Makefile`
	rm -f doc/Makefile
	rm -f `find . -name '*~'`
	rm -f `find . -name '*[\.]o'`
	rm -f `find . -name '*.d'`
	rm -f `find . -name '*[\.]orig'`
	rm -f `find . -name '*[\.]rej'`
	rm -f `find . -size 0`
	(cd setup/demudialog; make clean)
	rm -f Makefile
