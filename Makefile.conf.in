# Makefile.conf.in for DOSEMU
#
# This is the only Makefile getting substituted by ./configure
# It is included by the top Makefile and exports all needed variables
# to the slave-Makefiles.

export DOSBIN = dosemu.bin

export prefix=@prefix@
export bindir=@bindir@
export sysconfdir=@sysconfdir@
export datadir=@datadir@
export mandir=@mandir@
export docdir=@docdir@
export syshdimagedir=@syshdimagedir@
export x11fontdir=@x11fontdir@
export fdtarball=@fdtarball@
export srcdir=@srcdir@
export PACKAGE_VERSION=@PACKAGE_VERSION@

@SET_MAKE@
ifdef MAKE
  export MAKE
endif

export INCDIR=@INCDIR@

export CFLAGS=@CFLAGS@
export CPPFLAGS=@CPPFLAGS@
export LDFLAGS=@LDFLAGS@
export LIBS=@LIBS@
export CC=@CC@
export CPP=@CPP@

ifneq "@ASM_PEDANTIC@" ""
export ASM_PEDANTIC=@ASM_PEDANTIC@
endif

export YACC=@YACC@
# NOTE: we really need bison, yacc won't work any more
#export YACC=bison -y
export LEX=@LEX@

@X_SUPPORT@
ifdef X_SUPPORT
  export X_SUPPORT
endif
@X_GRAPHICS@
ifdef X_GRAPHICS
  export X_GRAPHICS
endif

# This gets defined even if we chose via ./include/config.h NOT to
# use the debugger
export DEBUGGER=@DEBUGGER@

@USE_MHPDBG@
ifdef USE_MHPDBG
  export USE_MHPDBG
endif
@USE_SBEMU@
ifdef USE_SBEMU
  export USE_SBEMU
endif
export OPTIONALSUBDIRS = @OPTIONALSUBDIRS@
export PLUGINSUBDIRS = @PLUGINSUBDIRS@
export REQUIRED=@REQUIRED@
@USE_ULTRA@
ifdef USE_ULTRA
  export USE_ULTRA
endif

export OS=@CONFIG_HOST@
export RANLIB=@RANLIB@

@ASPI_SUPPORT@
ifdef ASPI_SUPPORT
  export ASPI_SUPPORT
endif

@USE_SVGALIB@
ifdef USE_SVGALIB
  export USE_SVGALIB
endif

@USE_PTHREADS@
ifdef USE_PTHREADS
  export USE_PTHREADS
endif

@X86_EMULATOR@
ifdef X86_EMULATOR
  export X86_EMULATOR
endif

